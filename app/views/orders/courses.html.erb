<div class="body-student">
  <div class="titre">
    <strong> <h1>Mes cours</h1></strong>
  </div>
  <div class="affiche">
    <div class="row" id="fixed-row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <% @my_orders.each do |order| %>
        <% if order.status == "payé" %>
        <div class="spec">
          <div class="spectitle">
            <h3><%= order.speciality.title %></h3>
          </div>
          <div class="chapters">
            <% counter = 0 %>
            <% order.speciality.chapters.each do |chapter| %>
            <p><b>Chapitre <%= counter += 1 %>. </b><%= link_to chapter.title, speciality_chapter_path(chapter.speciality, chapter) %></p>
            <% if chapter.fiches.length > 0 %>
            <% chapter.fiches.each do |fiche| %>
            <div class="fiches">
              <%= link_to fiche.title, speciality_chapter_fich_path(fiche.chapter.speciality, fiche.chapter, fiche) %>
            </div>
            <% end %>
            <% end %>
            <% end %>
          </div>
          <div class= "student-footer">
            <div class="fake1">
              <%= image_tag 'flashcards.png', height: 30, width: 30, crop: :fill%> Mes flashcards
            </div>
            <div class="fake2">
              <%= image_tag 'calendar.png', height: 30, width: 30, crop: :fill%> Mon calendrier
            </div>
          </div>
        </div>
        <!-- ajouter le else ici si on veut afficher autre chose à la place d'un dashboard vide  -->
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
