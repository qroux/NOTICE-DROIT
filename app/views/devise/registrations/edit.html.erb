<% if resource_name == :teacher %>

  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3" >
        <div class="form-login">
          <h2> Modifier mon profil (prof)</h2>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email, required: true, autofocus: true %>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
              <% end %>

              <%= f.input :current_password, label: "Mot de passe",
                          hint: "Pour enregistrer vos modifications",
                          required: true,
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :password, label: "Changement de mot de passe",
                          hint: "Uniquement pour un changement de mot de passe",
                          required: false,
                          input_html: { autocomplete: "new-password" } %>
              <%= f.input :password_confirmation, label: "Confirmation du mot de passe",
                          required: false,
                          input_html: { autocomplete: "new-password" } %>
              <%= f.input :avatar, label: "photo de profil"%>
              <%= f.input :avatar_cache, as: :hidden %>


            </div>

            <div class="form-actions">
              <%= f.button :submit, "Update" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

<% else %>

  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="form-login">
          <h2> Modifier mon profil (etudiant)</h2>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email, required: true, autofocus: true %>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
              <% end %>

              <%= f.input :current_password, label: "Mot de passe",
                          hint: "Pour enregistrer vos modifications",
                          required: true,
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :password, label: "Changement de mot de passe",
                          hint: "Uniquement pour un changement de mot de passe",
                          required: false,
                          input_html: { autocomplete: "new-password" } %>
              <%= f.input :password_confirmation, label: "Confirmation du mot de passe",
                          required: false,
                          input_html: { autocomplete: "new-password" } %>
              <%= f.input :avatar, label: "photo de profil"%>
              <%= f.input :avatar_cache, as: :hidden %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Mettre à jour" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="form-login">
        <h4>Vous nous quittez déjà ?</h4>
        <p> <%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Êtes vous sûr?" }, method: :delete %></p>
        <%= link_to "Retour à l'accueil", :back %>
      </div>
    </div>
  </div>
</div>
