<div class="container center">
  <div class="presentation-payment">
    <h2>Méthodes de paiement :</h2>
    <p>Votre panier contient 1 spécialité</p>
  </div>
  <div class="tableau-recapitulatif">
    <h3> Description :  <%= @order.speciality.title %></h3>
    <h3> Prix unitaire : <%= @order.speciality.price %> €</h3>
    <h3> Quantité : 1 </h3>
    <h3>Total : <%= @order.speciality.price %>  €</h3>
  </div>
  <%= form_tag order_payments_path(@order) do %>
    <article>
      <label class="amount">
        <span>Amount: <%= humanized_money_with_symbol(@order.amount) %></span>
      </label>
    </article>

    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
      data-name="Ma spécialité"
      data-email="<%= current_student.email %>"
      data-description="Spécialité <%= @order.speciality.title %>"
      data-amount="<%= @order.amount_cents %>"
      data-currency="<%= @order.amount.currency %>"></script>
  <% end %>
</div>












