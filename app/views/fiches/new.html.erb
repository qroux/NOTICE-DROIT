<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="form-login">
<h2>Ajouter une fiche</h2>
  <%= simple_form_for [@speciality, @chapter, @fiche] do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
  <%= f.input :title, label: "Titre de la fiche"%>
  <%= f.input :content, as: :file %>
</div>
        <div class="form-actions">
  <%= f.button :submit %>
  </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

