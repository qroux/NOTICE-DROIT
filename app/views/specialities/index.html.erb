<div class="home-container">
  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.3), rgba(0,0,0,0.3)50%), url('<%= image_path 'home_image2.jpg' %>')">
    <div class="banner-content">
      <h1>Notice</h1>
      <h3>La solution qu'il vous faut pour réussir vos examens</h3>
      <br>
      <br>
      <p>Accédez à la spécialité que vous recherchez</p>
      <%= form_tag specialities_path, method: :get do %>
      <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Droit de la propriété"
      %>
      <% end %>

    </div>
  </div>
</div>




<ul>
  <% @specialities.each do |speciality|%>
    <li>
      <% if current_teacher.nil? %>
        <h1> <%= link_to speciality.title, speciality_path(speciality) %> </h1>
      <% else %>
        <h1> <%= speciality.title %></h1>
      <% end %>
    </li>

    <% speciality.chapters.each do |chapter| %>
      <li>
        <%= chapter.title %>
      </li>
      <%= chapter.fiches.length %> fiches
    <% end %>
  <% end %>
</ul>

<% if current_teacher.nil? %>
<% else %>
  <%= link_to "Ajouter une spécialité", new_speciality_path %>
<% end %>
